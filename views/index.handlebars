{{!-- Articles --} --}}
<div class="container">
  {{#each results}}
  <div class="row article data-id={{this._id}}">
    <div class="col-sm-12">
      <img>: {{this.thumbnail}}</img>
      <p>Title: {{this.title}}</p>
      <p>Description: {{this.summary}}</p>
      <a href={{this.link}} target="_blank">{{this.link}}</a>
      <button type="button" class="btn btn-primary align-middle save-btn" data-id={{this._id}}>Save Article</button>
    </div>
  </div>
  {{/each}}
</div>