{{!-- Scrape Articles --}}
<div class="container">
    <div id="articleBackground">

        <h1>Scraped Articles</h1>
        <ul>
            {{#each dbArticle}}
                <li class="article" data-id="{{this._id}}">
                <a href="https://screenrant.com{{this.link}}" target="_blank"><h2>{{this.title}}</h2></a>
                <a href="https://screenrant.com{{this.link}}" target="_blank"></a><img src={{this.image}} alt="{{this.title}}"></a>
                <p>{{this.excerpt}}</p>
                <a href="https://screenrant.com{{this.link}}" target="_blank"><h3>Read the whole story</h3>
                <a class="btn btn-outline-warning save" data-id="{{this._id}}">Save to My Articles</a>
                </li>
            {{/each}}
        </ul>
        <a class="nav-link" href="/scrape">Return to top</a>
    </div>
</div>
